{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ".editorconfig",
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": "LICENSE",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "tabWidth": 4,
        "bracketSpacing": false,
        "proseWrap": "always"
      }
    }
  ]
}
